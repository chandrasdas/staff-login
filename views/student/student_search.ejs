<!DOCTYPE html>
    <%- include("../partials/header.ejs") %>
<body>
    <%- include("../partials/nav.ejs") %>
    
    <div class="advSearch">
        <form action="student/search" method="post" >
            <h2>Advanced Search </h2>
            <div class="searchText">
                <label for="searchText">Student Name</label>
            <input type="text" id="searchText" name="searchText" minlength="3" maxlength="30">
            </div>
            <br>
        <select name="session" id="session-select">
            <option value="2021">2021</option>
            <option value="2020">2020</option>
            <option value="2019">2019</option>
        </select>
        <select name="class" id="class-select">
            <option value="">ALL CLASS</option>
            <option value="CLASS V">CLASS V</option>
            <option value="CLASS VI">CLASS VI</option>
            <option value="CLASS VII">CLASS VII</option>
            <option value="CLASS VIII">CLASS VIII</option>
            <option value="CLASS IX">CLASS IX</option>
            <option value="CLASS X">CLASS X</option>
            <option value="CLASS XI">CLASS XI</option>
            <option value="CLASS XII">CLASS XII</option>
            <option value="MP BATCH">MP BATCH</option>
            <option value="HS BATCH">HS BATCH</option>
        </select>
        <select name="section" id="section-select">
            <option value="">ALL SECTION</option>
            <option value="A">A</option>
            <option value="B">B</option>
            <option value="C">C</option>
            <option value="D">D</option>
            <option value="E">E</option>
        </select>
        <select name="caste" id="caste-select">
            <option value="">ALL CASTE</option>
            <option value="GEN">GEN</option>
            <option value="OBC">OBC</option>
        </select>
        <button>Search</button>
    </form>
    </div>
    <br>
    <br>    
    <br>    
    <br>    
    <% if(typeof data === 'string'){%>
    <h2> <%=data%></h2>
    <%} else {%>
    <p>Search result on  <b>'<%=sItem%>'</b> is:</p2><br><br>
        <% if(data.length === 0) { %>
            <p>Nothing found!</p>
        <% } else {%>
            <table>
                <tr>
                    <td>ID</td>
                    <td>Student Name</td>
                    <td>Class</td>
                    <td>Sec</td>
                    <td>Roll</td>
                    <td>Father Name</td>
                </tr>
                <% data.forEach(row=> {%>
                <tr>
                    <td><%= row.portal_id %></td>
                    <td><%= row.name %></td>
                    <td><%= row.class %></td>
                    <td><%= row.section %></td>
                    <td><%= row.roll %></td>
                    <td><%= row.father %></td>
                </tr>    
                <%})%>
            </table>
        <%}%>        
    <%}%>

           
      </script>
</body>
</html>